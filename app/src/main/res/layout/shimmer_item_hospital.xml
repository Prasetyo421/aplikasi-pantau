<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/shadow_effect">

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="280dp"
        android:layout_height="20dp"
        android:textSize="24sp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="RS Sejahtera"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tv_hospital_address"
        android:layout_width="240dp"
        android:layout_height="20dp"
        android:maxLines="2"
        android:textSize="18sp"
        tools:text="Jl. Diponegoro Denpasar Bali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hospital_name"
        android:background="@color/grey"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_available"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital_address"
        android:layout_marginTop="10dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tv_bed_available"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tv_available"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital_address"
        tools:text="20"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>