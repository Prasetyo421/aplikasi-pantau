<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="32dp"
    android:background="@drawable/shadow_effect">

    <TextView
        android:id="@+id/tv_hospital_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableLeftCompat="@drawable/ic_baseline_local_hospital_24"
        tools:text="RS Sejahtera" />

    <TextView
        android:id="@+id/tv_hospital_address"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="18sp"
        tools:text="Jl. Diponegoro Denpasar Bali"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hospital_name" />

    <TextView
        android:id="@+id/tv_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bed_available"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital_address"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_bed_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/tv_available"
        app:layout_constraintTop_toBottomOf="@id/tv_hospital_address"
        tools:text="20"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imgPhone"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_baseline_phone_enabled_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/icon_phone_enable" />

</androidx.constraintlayout.widget.ConstraintLayout>